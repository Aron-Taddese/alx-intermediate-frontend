{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./js",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es2016",
    "strict":true,
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include":[
    "js/**/*"
  ]
}
